# This file stores the default environment variables of the application
# DO NOT modify anything here
# The variables can be overridden in the ~/.config/rose/rose.conf file

# Application
APP_NAME="ROSE"
APP_NAME_LOWER="rose"
APP_NAME_CAPITAL="Rose"
APP_CONFIG_DIR="${XDG_CONFIG_HOME:-$HOME/.config}/$APP_NAME_LOWER"
APP_CONFIG_FILE="$APP_CONFIG_DIR/$APP_NAME_LOWER.conf"

# Rclone remote name
REMOTE_NAME="$APP_NAME_LOWER"

# Application paths
APP_MODULES_DIR="$APP_DIR/modules"
APP_UTILS_DIR="$APP_DIR/utils"

# Filter rules
APP_FILTER_RULES_FILE="$APP_DIR/filter-rules.txt"
APP_CONFIG_FILTER_RULES_FILE="$APP_CONFIG_DIR/filter-rules.txt"
FILTER_RULES_FILE="${XDG_STATE_HOME:-$HOME/.local/state}/$APP_NAME_LOWER/filter-rules.txt"

# Reports
CHECK_REPORT_FILE="${XDG_STATE_HOME:-$HOME/.local/state}/$APP_NAME_LOWER/check-report.txt"
CHECK_REPORT_REMOVE_IDENTICAL="yes"

# Log
LOG_DIR="${XDG_STATE_HOME:-$HOME/.local/state}/$APP_NAME_LOWER/logs"
LOG_FILE="$LOG_DIR/$(date +%Y-%m-%d-%H-%M-%S).log"
LOG_FILE_COUNT=30

# Root paths
ROOT_DIRS=(
    "${XDG_DATA_HOME:-$HOME/.local/share}/$APP_NAME_LOWER/Data, $REMOTE_NAME:$APP_NAME_CAPITAL/Data"
)

# Backup paths
REMOTE_BACKUP_DIR="$REMOTE_NAME:$APP_NAME_CAPITAL/Backup"
LOCAL_BACKUP_DIR="${XDG_DATA_HOME:-$HOME/.local/share}/$APP_NAME_LOWER/Backup"

# Sync settings
SYNC_DIRECTION="up"
SYNC_CHECK="yes"
